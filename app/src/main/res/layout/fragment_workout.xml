<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="so2.unica.qaddu.Workout">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/nameWorkout"
        android:layout_gravity="center_horizontal|top"
        android:text="Workout name"
        android:background="#E0E0E0"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/nameWorkout"
        android:layout_marginTop="10dp"
        android:background="#E0E0E0"
        android:id="@+id/tableWorkout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="350dp"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextViewTitleTotal"
                android:text="TOTAL"
                android:layout_weight="1"
                android:textColor="#2196F3"
                android:textSize="20dp"
                android:padding="17dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/TextViewTitleStep"
                android:text="STEP"
                android:layout_weight="1"
                android:textColor="#2196F3"
                android:textSize="20dp"
                android:padding="17dip"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextView3"
                android:text="7.35 KM/H"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="16dp"
                android:padding="10dip"
                android:gravity="center"/>

            <TextView
                android:id="@+id/TextView4"
                android:text="7.12 KM/H"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="16dp"
                android:padding="10dip"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextView5"
                android:text="8:02 /KM"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="16dp"
                android:padding="10dip"
                android:gravity="center"/>

            <TextView
                android:id="@+id/TextView6"
                android:text="8:15 /KM"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="16dp"
                android:padding="10dip"
                android:gravity="center"/>
        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAUSA"
        android:id="@+id/start_pause_button"
        android:layout_marginBottom="51dp"
        android:layout_marginEnd="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:id="@+id/stop_button"
        android:layout_alignTop="@+id/start_pause_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp" />


</RelativeLayout>
