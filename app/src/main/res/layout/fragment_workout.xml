<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="so2.unica.qaddu.Workout">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/nameWorkout"
        android:layout_gravity="center_horizontal|top"
        android:text="Workout name"
        android:background="#E0E0E0"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/nameWorkout"
        android:layout_marginTop="10dp"
        android:background="#E0E0E0"
        android:id="@+id/tableWorkout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="330dp"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextViewTitleTotal"
                android:text="TOTAL"
                android:layout_weight="1"
                android:textColor="#2196F3"
                android:textSize="20dp"
                android:padding="5dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/TextViewTitleStep"
                android:text="STEP"
                android:layout_weight="1"
                android:textColor="#2196F3"
                android:textSize="20dp"
                android:padding="5dip"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextView3"
                android:text="7.35 KM/H"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="20dp"
                android:padding="9dip"
                android:gravity="center"/>

            <TextView
                android:id="@+id/TextView4"
                android:text="7.12 KM/H"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="20dp"
                android:padding="9dip"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextView5"
                android:text="8:02 /KM"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="20dp"
                android:padding="9dip"
                android:gravity="center"/>

            <TextView
                android:id="@+id/TextView6"
                android:text="8:15 /KM"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="20dp"
                android:padding="9dip"
                android:gravity="center"/>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/tableWorkout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/rombo"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.22" />
    </LinearLayout>


</RelativeLayout>