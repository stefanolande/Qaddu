<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:background="@null"
        android:title="WORKOUT SETTINGS"
        >
        <EditTextPreference xmlns:android="http://schemas.android.com/apk/res/android"
                            android:background="@null"
                            android:defaultValue="100"
                            android:inputType="number"
                            android:key="setting_meters"
                            android:maxLength="3"
                            android:summary="Metri di stocazzo"
                            android:title="@string/setting_meters"/>

        <EditTextPreference xmlns:android="http://schemas.android.com/apk/res/android"
                            android:background="@null"
                            android:inputType="number"
                            android:key="setting_target"
                            android:title="@string/setting_target"/>
        <ListPreference
            android:entries="@array/Language"
            android:entryValues="@array/Language"
            android:key="language_preference"
            android:title="Language"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="DEVICE SETTINGS">
        <Preference xmlns:android="http://schemas.android.com/apk/res/android"
                    android:key="pref_key_gpsStatus"
                    android:title="@string/setting_gps">
            <intent android:action="android.settings.LOCATION_SOURCE_SETTINGS"/>
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="ADVANCED">
        <Preference xmlns:android="http://schemas.android.com/apk/res/android"
                    android:key="delete_all"
                    android:title="@string/delete_all"/>
    </PreferenceCategory>


</PreferenceScreen>